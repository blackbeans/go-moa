  </filter>
  <filter enabled="true">
    <tag>warn</tag>
    <type>file</type>
    <level>WARNING</level>
    <property name="filename">./logs/moa_warn.log</property>
    <property name="format">[%D %T] [%L] %M</property>
    <property name="rotate">true</property>
